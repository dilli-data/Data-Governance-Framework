{
  "version": "1.0",
  "roles": {
    "Registrar": {
      "description": "Registrar office staff with full access to student records",
      "permissions": {
        "student_records": {
          "read": true,
          "write": true,
          "delete": true,
          "masking": false
        },
        "financial_records": {
          "read": true,
          "write": true,
          "delete": false,
          "masking": false
        },
        "academic_records": {
          "read": true,
          "write": true,
          "delete": true,
          "masking": false
        }
      },
      "row_filters": [],
      "column_filters": [],
      "audit_level": "HIGH"
    },
    "Faculty": {
      "description": "Teaching faculty with limited access to student records",
      "permissions": {
        "student_records": {
          "read": true,
          "write": false,
          "delete": false,
          "masking": true
        },
        "financial_records": {
          "read": false,
          "write": false,
          "delete": false,
          "masking": true
        },
        "academic_records": {
          "read": true,
          "write": true,
          "delete": false,
          "masking": true
        }
      },
      "row_filters": [
        {
          "name": "department_filter",
          "condition": "department = current_user_department()"
        }
      ],
      "column_filters": [
        {
          "name": "mask_sensitive_data",
          "columns": ["ssn", "date_of_birth", "gpa"]
        }
      ],
      "audit_level": "MEDIUM"
    },
    "Student": {
      "description": "Students with access to their own records only",
      "permissions": {
        "student_records": {
          "read": true,
          "write": false,
          "delete": false,
          "masking": true
        },
        "financial_records": {
          "read": true,
          "write": false,
          "delete": false,
          "masking": true
        },
        "academic_records": {
          "read": true,
          "write": false,
          "delete": false,
          "masking": true
        }
      },
      "row_filters": [
        {
          "name": "own_records_filter",
          "condition": "student_id = current_user()"
        }
      ],
      "column_filters": [
        {
          "name": "mask_sensitive_data",
          "columns": ["ssn", "date_of_birth", "gpa"]
        }
      ],
      "audit_level": "LOW"
    },
    "DataAnalyst": {
      "description": "Data analysts with access to aggregated data",
      "permissions": {
        "student_records": {
          "read": true,
          "write": false,
          "delete": false,
          "masking": true
        },
        "financial_records": {
          "read": true,
          "write": false,
          "delete": false,
          "masking": true
        },
        "academic_records": {
          "read": true,
          "write": false,
          "delete": false,
          "masking": true
        }
      },
      "row_filters": [],
      "column_filters": [
        {
          "name": "mask_sensitive_data",
          "columns": ["ssn", "date_of_birth", "gpa", "email"]
        }
      ],
      "audit_level": "HIGH"
    }
  },
  "default_permissions": {
    "read": false,
    "write": false,
    "delete": false,
    "masking": true
  },
  "audit_config": {
    "enabled": true,
    "log_level": "INFO",
    "retention_days": 90,
    "destinations": [
      "CLOUDWATCH",
      "S3"
    ]
  },
  "compliance": {
    "regulations": [
      "FERPA",
      "GDPR"
    ],
    "requirements": [
      "Protect student educational records",
      "Limit access to authorized personnel",
      "Maintain audit trails"
    ]
  }
} 